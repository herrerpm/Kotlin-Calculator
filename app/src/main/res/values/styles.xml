<!-- res/values/styles.xml -->
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#3C4048</item>
        <item name="colorPrimaryDark">#3C4048</item>
        <item name="colorAccent">#3C4048</item>
        <!-- Add any additional customizations -->
    </style>

    <style name="MyButtonStyle">
        <item name="android:textColor">#3C4048</item>
        <item name="android:background">#EAEAEA</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32dp</item>
        <!-- Add any other desired attributes -->
    </style>

    <style name="OperatorStyle">
        <item name="android:textColor">#FFF</item>
        <item name="android:background">#3C4048</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32dp</item>
        <!-- Add any other desired attributes -->
    </style>

    <!-- Define other styles if needed -->

</resources>